<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expanded_noti_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/expanded_image_view"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/expanded_clear_image_view"
        android:src="@drawable/baseline_clear_black_24"
        android:layout_margin="8dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/expanded_sura_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/expanded_image_view"
        android:textAlignment="center"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/body1" />

    <TextView
        android:id="@+id/expanded_reciter_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expanded_sura_name_text_view"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/expanded_image_view"
        android:textAlignment="center"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/caption" />


    <RelativeLayout
        android:id="@+id/expanded_controller_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expanded_reciter_name_text_view"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:layout_toEndOf="@id/expanded_image_view">

        <ImageView
            android:id="@+id/expanded_pause_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_pause_black_48"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/expanded_play_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_play_arrow_black_48" />

        <ImageView
            android:id="@+id/expanded_skip_back_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_skip_previous_black_36" />


        <ImageView
            android:id="@+id/expanded_skip_next_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_skip_next_black_36" />


    </RelativeLayout>


</RelativeLayout>
